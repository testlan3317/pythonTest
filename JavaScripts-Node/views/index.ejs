<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <!-- dynamic define name. -->
    <% const name = 'mario' %>

    <!-- when we use = equal sign, it skips the special characters, we end it up with string value instead of raw html 
    however, - minus sign will not skip speical characters.
    -->
    <%- include('./partials/nav.ejs') %>

    <div class="blogs content">
        <!-- dynamic output name. -->
        <p><%= name %></p>
        <h2>All Blogs</h2>

        <% if(blogs.length > 0){ %> 
            <% blogs.forEach(blog =>{ %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet%></p>
                </a>
                <% }) %>
        <% } else {%>
           <p>There are no blogs display</p> 
        <%}%>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>